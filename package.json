{
  "name": "omb-accounting",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_OPTIONS='--no-warnings' next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright test --reporter=html",
    "e2e:video": "playwright test e2e/video.spec.ts --project=chromium",
    "e2e:video:record": "node scripts/record-video.js",
    "e2e:video:upload": "node scripts/record-video.js --send",
    "e2e:video:list": "node scripts/record-video.js --list",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run test -- --passWithNoTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
